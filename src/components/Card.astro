---
const { link, image, image_alt, title, meta_author, meta_time, meta_text } = Astro.props
---

<article class={!image ? 'card card--text' : 'card'}>
    <header>
        <a href={link}>
            { image ?
            <picture>
                <img aria-hidden="true" src={image} alt={image_alt}/>
            </picture>
            : '' }

            <h2 class="text-4">{title}</h2>
            { meta_text ? <p class="card__meta">{meta_text}</p> : '' }
        </a>
        { meta_author && meta_time ? <p class="card__meta"><a href="#">{meta_author}</a><time>{meta_time}</time></p> : '' }
    </header>
</article>

<style is:global lang="scss">
.card {
    width: fit-content;


    &--text {
        --border-color: rgba(31, 31, 31, 0.15);
        border-bottom: 1px solid var(--border-color);
        margin: 0 auto;
        margin-block-end: 30px;
        padding-block-end: 10px;
        width: min(75ch, 100%);
    }

    a {
        color: unset;
        display: block;
        text-decoration: unset;
    }

    picture {
        margin-block-end: 0.5rem;
        overflow: hidden;
    }

    img {
        aspect-ratio: 4 / 3;
        width: 100%;
    }

    h2 {
        margin-block-end: 0.2em;
    }
    &__meta {
        --max-font-size: 1;
        font-variation-settings: "wght" 550;
        
        a {
            display: unset;
            font-variation-settings: inherit;
        }

        time {
            font-variation-settings: initial;

            &::before {
                content: ' : ';
            }
        }
    }
}

@media (hover: hover) and (pointer: fine) {
    .card {

        @media (prefers-reduced-motion: no-preference) {
            img {
                transition: transform 350ms var(--global-easing);
            }
            &:hover {
                img {
                    transform: scale(1.05);
                }
            }
        }
        a:hover {
            color: var(--color-primary-link);
        }

        a:hover * {
            color: inherit;
        }
    }

    .card--text {
        @media (prefers-reduced-motion: no-preference) {
            header {
                transition: transform 350ms var(--global-easing);
            }
        }
        &:hover {
            border-left: 1px solid var(--border-color);
            
            header {
                transform: translateX(15px);
            }
        }
    }
}
</style>